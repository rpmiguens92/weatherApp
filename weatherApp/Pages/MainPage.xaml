<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="weatherApp.Pages.MainPage"
             >


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                <Button Text="Login" Clicked="OnLoginClicked" 
                        BackgroundColor="#87CEEB" TextColor="White" CornerRadius="10" />
            </HorizontalStackLayout>
            <Label Text="Weather App" FontSize="28" FontAttributes="Bold"
   HorizontalTextAlignment="Center" Margin="0,10" TextColor="#4682B4" />
            <Image Source="weather.jpg"
    Aspect="AspectFit"
    HeightRequest="200"
    HorizontalOptions="Center" />


            <Label Text="Using a weather app offers numerous advantages, such as real-time updates on current conditions and accurate forecasts that help you plan your day effectively. Enjoy it!"
        FontSize="16"
        TextColor="#666666"
        LineBreakMode="WordWrap" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>